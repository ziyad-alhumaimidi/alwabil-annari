
صنف لـاعب
{
  عرف س: صحيح؛
  عرف ص: صحيح؛
  عرف ميت:ثنائي؛
  عرف ميت_السابق: ثـنائي؛
  عرف عداد_الانفجار: صحيح؛
  عرف عداد_الإطلاق:صحيح؛
  عرف صحة:صحيح؛
  عرف نقاط:صحيح؛
}؛

دالة حرك_اللاعب (مل:سند[لـاعب]، عصا:سند[تـحكم]) {
  عرف سع : عائم؛
  عرف صع : عائم؛
  سع = عصا.المحور_س؛
  صع = عصا.المحور_ص؛

  مل.س += سع * 7؛
  مل.ص += صع * 7؛
  
  إذا مل.س <= 0 {مل.س = 0}؛
  إذا مل.س >= 1280{مل.س = 1280}؛
  إذا مل.ص <= 0 {مل.ص = 0}؛
  إذا مل.ص >= 700{مل.ص = 700}؛
}؛

دالة حدث_اللاعب (نقش:سند[دمـغة]، ل:سند[لـاعب]، عصا : سند[تـحكم]، نقش2:سند[دمـغة]، بب:صحيح) {
  ل.عداد_الإطلاق+=1؛
  إذا ل.عداد_الانفجار < 200{
    إذا ل.ميت == 1 {
      إذا ل.ميت_السابق == 0 صوت4.شغل()؛
      ل.ميت_السابق = ل.ميت؛
      نقش_الانفجار.اطمغ(ل.س، ل.ص)؛
      ل.عداد_الانفجار +=1
    }
    وإلا {
      حرك_اللاعب(ل، عصا)؛
      نقش.اطمغ(ل.س، ل.ص)؛
    }؛
  }؛
  إذا ل.صحة==0{
  نقش2.اطمغ(0، بب)؛
  بب+=45؛
  نقش2.اطمغ(0، بب)؛
  بب+=45؛
  نقش2.اطمغ(0، بب)؛
  بب=585؛
  }؛
  
   إذا ل.صحة==1{
  نقش2.اطمغ(0، بب)؛
  بب+=45؛
  نقش2.اطمغ(0، بب)؛
  بب=585؛
  }؛
  
   إذا ل.صحة==2{
  نقش2.اطمغ(0، بب)؛
  }؛
}؛
