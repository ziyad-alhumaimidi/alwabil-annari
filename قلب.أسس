صنف قـلب
{
  عرف س: صحيح؛
  عرف ص: صحيح؛
  عرف ميت: ثنائي؛
}؛

دالة حرك_القلب (ق:سند[قـلب])
{
  إذا ق.س < -100{
  ق.س=مـتم.ريـاضيات.عشوائي() % 4700 + 1300؛
  ق.ص=مـتم.ريـاضيات.عشوائي() % 720؛
  }؛
  ق.س-=3؛
}؛

دالة حدث_القلب (نقش:سند[دمـغة]، ق:سند[قـلب])
{
إذا ق.ميت==1{
 ق.س=مـتم.ريـاضيات.عشوائي() % 4700 + 1300؛
 ق.ص=مـتم.ريـاضيات.عشوائي() % 720؛
 ق.ميت=0؛
}؛
  حرك_القلب (إعادة_الصحة)؛
  نقش.اطمغ(ق.س، ق.ص)؛
  
}؛
